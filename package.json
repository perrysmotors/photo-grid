{
  "name": "photo_grid",
  "description": "Size layers to common photo dimensions and scale them to fit in rows or columns",
  "author": "Giles Perry <giles@gilesperry.info> (http://gilesperry.info/)",
  "version": "3.0.0",
  "engines": {
    "sketch": ">=3.0"
  },
  "skpm": {
    "name": "Photo Grid",
    "manifest": "src/manifest.json",
    "identifier" : "com.gilesperry.photo-grid",
    "appcast": "https://api.sketchpacks.com/v1/plugins/com.gilesperry.photo-grid/appcast",
    "main": "PhotoGrid.sketchplugin",
    "assets": [
      "assets/**/*"
    ]
  },
  "scripts": {
    "build": "skpm-build",
    "watch": "skpm-build --watch",
    "start": "skpm-build --watch --run",
    "postinstall": "npm run build && skpm-link"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/perrysmotors/photo-grid.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@skpm/builder": "^0.5.2"
  }
}
